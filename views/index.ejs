<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Location Tracker</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            text-align: center;
            padding: 20px;
        }

        h1 {
            color: #333;
        }

        table {
            width: 60%;
            margin: 20px auto;
            border-collapse: collapse;
            background: white;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        th, td {
            padding: 12px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007BFF;
            color: white;
            text-transform: uppercase;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        tr:last-child td {
            border-bottom: none;
        }
    </style>
    <script>
        setTimeout(() => {
            location.reload();
        }, 5000);
    </script>
</head>
<body>
    <h1>Location Data</h1>
    <table>
        <thead>
            <tr>
                <th>Sl No</th>
                <th>Longitude</th>
                <th>Latitude</th>
            </tr>
        </thead>
        <tbody>
            <% let highestSlNo = locations.length; %>
            <% locations.slice().reverse().forEach((location, index) => { %>
                <tr>
                    <td><%= highestSlNo - index %></td>
                    <td><%= location.longitude %></td>
                    <td><%= location.latitude %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
